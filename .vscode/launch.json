{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Main App",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch test function",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "args": [
                "-test.v"
            ],
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}"
            }
        }
    ]
}